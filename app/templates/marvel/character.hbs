<div class="layout-row layout-align-center-center">
    <div class="flex-30">
    {{#paper-card as |card| }}
        {{card.image src=url alt=model.name title=model.name}}
        {{#card.title as |title|}}
            {{#title.text as |text|}}
                {{#text.headline}}{{model.name}}{{/text.headline}}
            {{/title.text}}
        {{/card.title}}
        {{#card.content}}
            <p>
                {{model.description}}
            </p>
        {{/card.content}}
        {{#card.actions class="layout-column"}}
            {{#paper-button}}Action 1{{/paper-button}}
            {{#paper-button}}Action 2{{/paper-button}}
        {{/card.actions}}
    {{/paper-card}}
    </div>
</div>
<div class="layout-row layout-align-center-center cent">
    <div class="flex"><h2>Events</h2></div>
    <div class="flex"><h2>Series</h2></div>
    <div class="flex"><h2>Stories</h2></div>
</div>
